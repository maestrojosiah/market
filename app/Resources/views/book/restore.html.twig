{% extends 'base.html.twig' %}
{% block stylesheets %}

    <!-- DataTables CSS -->
    <link href="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
{% endblock %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <main>
    <div class="container">
    <h3>Deleted Books list</h3>

    <table class="table table-striped" id="dt_tbl">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>Cost</th>
                <th>Description</th>
                <th>Availability</th>
                <th>Uploaded</th>
                <th>Deleted</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.title }}</a></td>
                <td>{{ book.author }}</td>
                <td>{{ book.category }}</td>
                <td>{{ book.cost }}</td>
                <td>{{ book.description|length > 50 ? book.description|slice(0, 50) ~ '...' : book.description  }}</td>
                <td>{{ book.availability }}</td>
                <td>{% if book.uploaded %}{{ book.uploaded|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ book.deleted }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('book_show', { 'id': book.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('book_restore', { 'id': book.id }) }}">restore</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if app.user and app.user.active == true %}

    <ul>
        <li>
            <a href="{{ path('book_new') }}">Create a new book</a>
        </li>
    </ul>
{% endif %}
</div>
</main>
{% endblock %}
{% block javascripts %}
    <!-- DataTables JavaScript -->
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
    $(document).ready(function() {
        $('#dt_tbl').DataTable({
            responsive: true,
            "pageLength": 10

        });
    });
    </script>

{% endblock %}