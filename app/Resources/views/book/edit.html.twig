{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <h4>Edit {{book.title}} </h4>
    <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-6 mb-4">

          {{ form_start(edit_form, {'attr': {'class': 'login-form'}}) }}
            <p class="login-img"><i class="arrow_carrot-right_alt "></i></p>
            <div class="form-group">
              <label>Book Title</label>
              {{ form_row(edit_form.title, {'attr': {'class': 'form-control', 'placeholder': 'Book Title' }}) }}
            </div>
            <div class="form-group">
              <label>Book Author</label>
              {{ form_row(edit_form.author, {'attr': {'class': 'form-control', 'placeholder': 'Book Author' }}) }}
            </div>
            <div class="form-group">
              <label>Category</label>
              {{ form_row(edit_form.category, {'attr': {'class': 'form-control', 'placeholder': 'Category' }}) }}
            </div>
            <div class="form-group">
              <label>Cost</label>
              {{ form_row(edit_form.cost, {'attr': {'class': 'form-control', 'placeholder': 'Cost' }}) }}
            </div>
            <div class="form-group">
              <label>Description</label>
              {{ form_row(edit_form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description' }}) }}
            </div>
            <div class="form-group">
              <label>Availability</label>
              {{ form_row(edit_form.availability, {'attr': {'class': 'form-control', 'placeholder': 'Availability' }}) }}
            </div>
            <div class="form-group">
              {{ form_row(edit_form.image, {'attr': {'class': 'form-control' }}) }}
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Edit Book</button>
          {{ form_end(edit_form) }}
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <h4>Image: </h4>
            <img style="max-height:300px;" src="{{asset(book.image)}}" />
        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
      </div>
    </main>

    <ul>
        <li>
            <a href="{{ path('book_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
