{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-6 mb-4">

		{{ form_start(form) }}

			  <div class="form-group">
			    <label for="firstName" class="col-sm-2 control-label">First Name</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.f_name, {'attr': {'class': 'form-control', 'placeholder': 'First Name' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="lastName" class="col-sm-2 control-label">Last Name</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.l_name, {'attr': {'class': 'form-control', 'placeholder': 'Last Name' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="username" class="col-sm-2 control-label">Username</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="email" class="col-sm-2 control-label">Phone</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Phone' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="email" class="col-sm-2 control-label">Residence</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.residence, {'attr': {'class': 'form-control', 'placeholder': 'Residence' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="email" class="col-sm-2 control-label">Category</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Category' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="email" class="col-sm-2 control-label">Email</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control', 'id': 'password' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-sm-2 control-label">Repeat Password</label>
			    <div class="col-sm-10">
		    		{{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control', 'id': 'passwrdrepeat' }}) }}
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <button type="submit" class="btn btn-default">Sign Up</button>
			    </div>
			  </div>

		{{ form_end(form) }}
			</div>
		</div>
	</div>
</main>
{% endblock %}
