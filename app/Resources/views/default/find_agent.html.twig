{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}

{% block body %}

  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

      <!--Grid row-->
      <div class="row wow fadeIn">

        <!--Grid column-->
        <div class="col-md-6 mb-4">
          <h4>Please select the closest Place</h4>
          <form>
            <div class="form-group">
              <label for="agents_residents">Our Agents</label>
              <select class="form-control" id="agents_residents">
                {% for agent in agents %}
                  <option value="{{agent.id}}">{{agent.residence}}</option>
                {% endfor %}
              </select>
            </div>
          </form>

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <!--Content-->
          <div class="p-4">
            <span id="agents_list"></span>

            <!--Card-->
            <div class="card">

              <!--Card image-->
              <div class="view overlay">
                <a href="#">
                  <div class="mask rgba-white-slight"></div>
                </a>
              </div>
              <!--Card image-->
              
              <!--Card content-->
              <div class="card-body text-center">
                <!--Category & Title-->
                <a href="" class="grey-text">
                  <h5>Title</h5>
                </a>
                <h5>
                  <strong>
                    <a href="" class="dark-grey-text">DSa
                      <span class="badge badge-pill danger-color">ABc</span>
                    </a>
                  </strong>
                </h5>

                <h4 class="font-weight-bold blue-text">
                  <strong>KSD Kes</strong>
                </h4>

              </div>
              <!--Card content-->

            </div>
            <!--Card-->

          </div>
          <!--Content-->

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

      <hr>


    </div>
  </main>
  <!--Main layout-->


{% endblock %}
{% block javascripts %}
  <script>
    $(document).on('change', '#agents_residents', function(){

      $.ajax({
          url:'{{ (path('add_to_cart')) }}',
          type: "POST",
          dataType: "json",
          data: {
            "book_id": book_id,
            "user_id": user_id,
            "order_qty": order_qty,
          },
          async: true,
          success: function (data)
          {
            console.log(data);
          },
          error: function (xhr, status, error) {
            console.log('error');
          }
      });

    });
  </script>
{% endblock %}